define(
    ["angular", "jsRoutes"]
    (angular, jsRoutes) ->
        class ChatService
            constructor: ($resource) ->
                Chat = $resource jsRoutes.controllers.ChatAPI.list().url, {},
                    query:
                        method: 'GET'
                        isArray: false

                ChatService::get = (params) ->
                    Chat.query(params)
)
